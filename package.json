{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "",
  "main": "gulpfile.js",
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "browser-sync": "^2.29.1",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.0.0",
    "gh-pages": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^10.1.0",
    "pug": "^3.0.2",
    "sass": "^1.63.6"
  },
  "scripts": {
    "pug": "pug --pretty -o static src/views static/",
    "scss": "sass --no-source-map src/scss:static/styles  && postcss -u autoprefixer -r static/styles/*.css",
    "copy-fonts": "copyfiles --flat src/fonts/* static/fonts",
    "copy-img": "copyfiles --flat src/img/* static/img",
    "copy-js": "copyfiles --flat src/js/* static/js",
    "copy-other": "copyfiles --flat src/.htaccess src/CNAME src/favicon.ico static",
    "copy-rest": "npm run copy-fonts && npm run copy-img && npm run copy-js && npm run copy-other",
    "clean": "del-cli static",
    "watch-pug": "onchange \"src/**/*.pug\" -- npm run pug",
    "watch-scss": "onchange \"src/scss\" -- npm run scss",
    "watch-js": "onchange \"src/js\" -- npm run copy-js",
    "serve": "browser-sync start --server \"static\" --serveStatic \"static\" --files \"static\" --extensions \"html\"",
    "build": "npm run clean && npm run pug && npm run scss && npm run copy-rest",
    "start": "npm run build && run-p watch-* serve",
    "deploy": "gh-pages -d static"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zenpudding/portfolio.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zenpudding/portfolio/issues"
  },
  "homepage": "https://zenpudding.github.io/portfolio",
  "dependencies": {
    "filenamify": "^6.0.0"
  }
}
